<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyIMC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/stell_pink</item>
        <item name="colorPrimaryVariant">@color/midnight</item>
        <item name="colorOnPrimary">@color/snow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_ryb</item>
        <item name="colorSecondaryVariant">@color/orege_yellow</item>
        <item name="colorOnSecondary">@color/blac_chocolate</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textViewStyle">@font/roboto_slab</item>
        <item name="android:editTextStyle">@font/roboto_slab</item>
        <item name="android:buttonStyle">@font/roboto_slab_bold</item>

    </style>
</resources>